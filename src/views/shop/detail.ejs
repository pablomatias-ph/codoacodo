<%- include ('../partials/header') %>
    <main class="container">
        <section class="item">
            <picture class="item__img card-item__cover">
                <img class="card-item__img--front" src="../../imgs<%= item.image_front %>"
                    alt="<%= item.product_description %>">
                <img class="card-item__img--back" src="../../imgs/<%= item.image_back %>"
                    alt="<%= item.product_description %>">
            </picture>
            <article class="item__info">
                <p class="item__licence"><%= item.licence_name %></p>
                <h3 class="item__name"><%= item.product_name %></h3>
                <p class="item__description"><%= item.product_description %></p>
                <p class="item__price"><%= item.price %></p>
                <div class="item__cart">
                    <button id="subtract" class="item__quantity" type="button">-</button>
                    <input class="item__input" type="text" name="quantity" id="quantity" placeholder="0">
                    <button id="add" class="item__quantity" type="button">+</button>
                    <button class="item__submit btn btn--primary btn--medium" type="submit">Agregar al carrito</button>


                </div>
                <p class="item__promo"><a href="">Ver métodos de pago</a> - <%= item.dues %> cuotas sin interés</p>
            </article>
        </section>
        <%- include ('../components/slider') %>

    </main>
    <script src="../../js/item.js"></script>
<%- include ('../partials/footer') %>